{
    // Telemetry
    "telemetry.telemetryLevel": "off",

    // General options
    "vsicons.dontShowNewVersionMessage": true,

    "workbench.startupEditor": "none",
    "workbench.iconTheme": "vscode-icons",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#333333ef"
    },

    // Text Editor
    "editor.rulers": [79],
    "editor.fontFamily": "CaskaydiaCove Nerd Font Mono, Cascadia Code PL, Fira Code Retina, Fira Code, Fira Mono, Consolas, monospace",
    "editor.fontWeight": "400",
    "editor.fontSize": 13.5,
    "editor.fontLigatures": true,

    // Integrated terminal
    "terminal.integrated.fontSize": 13.5,
    "terminal.integrated.fontWeight": "400",
    "terminal.integrated.useWslProfiles": true,
    "terminal.integrated.profiles.linux": {
        "zsh": {
            "path": "/usr/bin/zsh",
            "icon": "terminal-ubuntu"
        },
    },
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-noLogo"]
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Anaconda Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [
                "/K",
                "%USERPROFILE%\\.miniconda3\\Scripts\\activate.bat",
                "%USERPROFILE%\\.miniconda3"
            ],
            "icon": "terminal-cmd"
        },
    },
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.tabs.enabled": true,

    // Other settings
    "window.customMenuBarAltFocus": false,

    "security.workspace.trust.untrustedFiles": "open",

    "files.associations": { "*.env*": "properties" },    

    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },

    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "python.analysis.autoImportCompletions": false,
    "python.terminal.activateEnvironment": false
}
