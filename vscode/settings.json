{
    // Telemetry
    "telemetry.telemetryLevel": "off",

    // General options
    "vsicons.dontShowNewVersionMessage": true,

    "workbench.startupEditor": "none",
    "workbench.iconTheme": "catppuccin-perfect-mocha",
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.list.smoothScrolling": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#444444ff"
    },

    // Text Editor
    "editor.rulers": [79],
    "editor.fontFamily": "JetBrainsMono Nerd Font, Cascadia Code PL, Fira Code Retina, Fira Code, Fira Mono, Consolas, monospace",
    "editor.fontWeight": "450",
    "editor.fontSize": 15,
    "editor.fontLigatures": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorBlinking": "smooth",
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",

    // Integrated terminal
    // "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.fontWeight": "450",
    "terminal.integrated.useWslProfiles": true,
    "terminal.integrated.profiles.linux": {
        "zsh": {
            "path": "/usr/bin/zsh",
            "icon": "terminal-tmux"
        },
    },
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-noLogo"]
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Anaconda Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [
                "/K",
                "%USERPROFILE%\\.miniconda3\\Scripts\\activate.bat",
                "%USERPROFILE%\\.miniconda3"
            ],
            "icon": "terminal-cmd"
        },
    },
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.tabs.enabled": true,

    // Other settings
    "window.customMenuBarAltFocus": false,

    "security.workspace.trust.untrustedFiles": "open",

    "files.associations": { "*.env*": "properties" },    

    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },

    "notebook.output.textLineLimit": 100,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "python.analysis.autoImportCompletions": false,
    "python.terminal.activateEnvironment": false,

    "security.workspace.trust.enabled": false,

    "git.mergeEditor": false,
    "dev.containers.dockerPath": "podman",
    "chatgpt.lang": "en",
}
